<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Settings"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkTransition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Transition" />

                <CheckBox
                    android:id="@+id/checkNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Network" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkSilent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Silent" />

                <CheckBox
                    android:id="@+id/checkDebug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Debug" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkSilentRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Silent Ratio" />

                <CheckBox
                    android:id="@+id/checkError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Error" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkLocalQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Local Query" />

                <CheckBox
                    android:id="@+id/checkFP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Fingerprints" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkOnlineQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Online Query" />

                <CheckBox
                    android:id="@+id/checkMatchMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Match Mode" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkNSM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18sp"
                    android:paddingTop="18sp"
                    android:text="Noise, Speech, Music" />
            </TableRow>
        </TableLayout>



        <TextView
            android:id="@+id/textViewACR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACR Settings"
            android:textAppearance="?android:attr/textAppearanceLarge" />





        <Spinner
            android:id="@+id/spinnerACROptimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/acr_optimization_mode" />
        
    </LinearLayout>

</ScrollView><!-- From: file:/Users/khsu/AndroidStudioProjects/HeartRating/app/src/main/res/layout/settings.xml -->