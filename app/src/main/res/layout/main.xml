<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:weightSum="1">


	<TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_column="6"
		android:layout_gravity="center_horizontal" />

	<TableLayout
        android:id="@+id/buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

		 <Button
             android:id="@+id/btnAcr"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Start ACR" />

		 <TableRow
			 android:layout_width="match_parent"
			 android:layout_height="match_parent">

		 </TableRow>

	 </TableLayout>

	<TextView
		android:layout_width="280dp"
		android:layout_height="151dp"
		android:text="New Text"
		android:id="@+id/msText" />

	<ScrollView
	    android:id="@+id/scroller2"
	    android:layout_width="fill_parent"
	    android:layout_height="383dp">
	 	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
	 		<TextView android:id="@+id/txtResult" android:text="" android:layout_width="fill_parent" android:layout_height="fill_parent" android:maxLines="100" android:ellipsize="end"/>
	  	</LinearLayout>
	</ScrollView>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText"
		android:layout_gravity="center_horizontal" />

</LinearLayout>
